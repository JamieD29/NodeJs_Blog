<div class="search-form mt-4">
  <form method="POST">
    <div class="mb-3">
      <label for="search-input" class="form-label">Từ khoá</label>

      <input
        name="q"
        type="text"
        class="form-control"
        id="search-input"
        placeholder="Enter your input: "
      />
    </div>

    <div class="mb-3">
      <label for="gender-input" class="form-label">Giới tính</label>

      <select type="text" name="gender" class="form-control" id="gender-input">
        <option value="">--Chọn giới tính--</option>
        <option value="male">Nam</option>
        <option value="female">Nữ</option>
        <option value="other">Khác</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>